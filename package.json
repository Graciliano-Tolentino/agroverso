  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./check-env.js"
  },
  "bin": {
    "check-env": "./check-env.js"
  },
  "sideEffects": false,
  "browser": {
    "crypto": false
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "engines": {
    "node": ">=18.18.0 <=20.x",
    "npm": ">=9.x"
  },
  "files": [
    "src/",
    "vite.config.js",
    "index.html",
    "check-env.js"
  ],
  "keywords": [
    "agroverso",
    "frontend",
    "typescript",
    "react",
    "vite",
    "tailwind",
    "web3",
    "regenerativo",
    "ecossistema"
  ],
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "vite",
    "start:mock": "NODE_ENV=mock vite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:check": "eslint --ext .js,.ts,.tsx .",
    "format": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:all": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "build:preview": "npm run validate && vite preview",
    "validate": "npm run typecheck && npm run lint && npm run format && npm run test",
    "ci": "npm run validate && npm run build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "cypress run --e2e",
    "test:e2e:open": "cypress open",
    "security": "npm audit --production && snyk test",
    "prepare": "husky install",
    "deploy": "vercel --prod",
    "release": "standard-version",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.1",
    "@testing-library/jest-dom": "^6.4.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react-i18next": "^8.1.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.7.2",
    "commitizen": "^4.3.0",
    "cssnano": "^7.0.1",
    "cypress": "^13.9.0",
    "cypress-axe": "^1.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "esbuild": "^0.25.4",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.4",
    "prettier": "^3.3.2",
    "snyk": "^1.1285.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.8",
    "terser": "^5.30.4",
    "typescript": "^5.4.5",
    "vite": "^6.3.5",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
